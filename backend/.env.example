# 應用程式設定
PORT=3000

# 資料庫設定
DATABASE_URL="postgresql://user:password@localhost:5432/movieviewer"

# JWT 密鑰設定
JWT_SECRET="your-jwt-secret"

# Google OAuth 2.0 設定 (從 Google Cloud Console 獲取)
# https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# API 設定
API_URL="http://localhost:3000/api" # 用於 OAuth callback URL

# TMDB API 設定
# 從 https://www.themoviedb.org/settings/api 獲取
TMDB_API_KEY="your-tmdb-api-key"