# 應用程式設定
PORT=3000

# 環境設定
NODE_ENV=development     # development 或 production

# API 設定
API_URL="http://localhost:3000/api"  # 開發環境
# API_URL="https://api.movieviewer.com/api"  # 生產環境 

# 資料庫設定
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/movie_viewer?schema=public&timezone=Asia/Taipei"  # 開發環境
# DATABASE_URL="postgresql://production_user:production_password@production-db:5432/movieviewer"  # 生產環境

# JWT 密鑰設定
JWT_SECRET="your_jwt_secret_key"  # 應使用強密鑰

# Google OAuth 2.0 設定 (從 Google Cloud Console 獲取)
# https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# TMDB API 設定
# 從 https://www.themoviedb.org/settings/api 獲取
TMDB_API_KEY="your-tmdb-api-key"
