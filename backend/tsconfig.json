{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "types": ["node", "mocha", "chai", "sinon", "sinon-chai"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}