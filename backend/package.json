{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "dotenv -e .env.production -- cross-env NODE_ENV=production node dist/server.js",
    "dev": "dotenv -e .env.development -- cross-env NODE_ENV=development nodemon src/server.ts",
    "build": "tsc",
    "test": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/**/*.test.ts\"",
    "test:watch": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/**/*.test.ts\" --watch",
    "test:validation": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/validation/**/*.test.ts\"",
    "test:auth": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/auth/*.test.ts\"",
    "test:models": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/models/**/*.test.ts\"",
    "test:database": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/database/**/*.test.ts\"",
    "test:security": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/security/**/*.test.ts\"",
    "test:movies": "dotenv -e .env.development -- cross-env NODE_ENV=development mocha -r ts-node/register \"src/tests/movies/**/*.test.ts\"",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "migrate:status": "dotenv -e .env.development -- prisma migrate status",
    "db": "dotenv -e .env.development -- npx prisma db push ; npx prisma generate",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:seed": "dotenv -e .env.development -- prisma db seed",
    "prisma:generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@types/express": "^5.0.0",
    "@types/joi": "^17.2.3",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.2.1",
    "sinon": "^18.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
