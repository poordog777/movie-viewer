generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  googleId  String?  @unique // Optional for Google OAuth
  avatar    String?  // Profile picture URL
  role      UserRole @default(USER)
  status    UserStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ratings   Rating[]
  favorites Favorite[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  score     Int      
  movieId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([movieId])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  movieId   Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}